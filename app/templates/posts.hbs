<div id='posts-main' class="row">
    <div {{bind-attr class="postVisible:hidden:col-sm-12"}}>
        <div class="row">
            {{#each p in model}}
              {{#if p.fullWidth}}
                <div class="col-sm-12">
                    <div class="full-post" {{action 'transitionToPost' p}} style="background-image: url(http://i.imgur.com/9lDdLYR.jpg);">
                        <div align="center" class="hover-fix">
                            <p>{{p.title}}</p>
                            <p style="margin-top: 15px;">{{format-date p.date}}</p>
                        </div>
                    </div>
                </div>
              {{else}}
                  <div {{bind-attr class="p.large:col-sm-8:col-sm-4"}}>
                      <div class="normal-post" {{action 'transitionToPost' p}} style="background-image: url(http://i.imgur.com/9lDdLYR.jpg);">
                          <div align="center" class="hover-fix">
                              <p>{{p.title}}</p>
                              <p style="margin-top: 15px;">{{format-date p.date}}</p>
                          </div>
                      </div>
                  </div>
              {{/if}}
            {{/each}}
        </div>
    </div>
    <div {{bind-attr class="postVisible:col-sm-12:hidden"}}>
      {{outlet}}
    </div>
</div>