<div id='posts-main' class="row">
    <div {{bind-attr class="postVisible:hidden:col-sm-12"}}>
        <div class="container">
            <div class="row">
              <h1 class="body-title">Tile Blog</h1>
              <h2 class="body-title">A project by <a href="https://github.com/Fuiste">William Pelrine</a></h2>
            </div>
            <div id="posts-body" class="row">
            {{#each p in model}}
              {{#if p.fullWidth}}
                <div class="col-sm-12 padding-fix">
                    <div class="full-post hover-scale" {{action 'transitionToPost' p}} {{bind-attr style=p.inlineStyle}}>
                        <div align="center" class="hover-fix">
                            <p>{{p.title}}</p>
                            <p style="margin-top: 15px;">{{format-date p.date}}</p>
                        </div>
                    </div>
                </div>
              {{else}}
                  <div {{bind-attr class=":col-sm-6 p.large:col-md-8:col-md-4 p.large:col-lg-9:col-lg-3 :padding-fix"}}>
                      <div {{bind-attr class="p.large:large-post:normal-post :hover-scale"}} {{action 'transitionToPost' p}} {{bind-attr style=p.inlineStyle}}>
                          <div align="center" class="hover-fix">
                              <p>{{p.title}}</p>
                              <p style="margin-top: 15px;">{{format-date p.date}}</p>
                          </div>
                      </div>
                  </div>
              {{/if}}
            {{/each}}
            </div>
            {{#if this.twoWayNav}}
            <div class="row">
              <div class="col-sm-6">
                <button {{action 'loadNewPage' this.page -1}}class="btn btn-block btn-link"><h1>Newer posts</h1></btn>
              </div>
              <div class="col-sm-6">
                <button {{action 'loadNewPage' this.page 1}}class="btn btn-block btn-link"><h1>Older posts</h1></btn>
              </div>
            </div>
            {{else}}
            <div class="row">
              <button {{action 'loadNewPage' this.page 1}}class="btn btn-block btn-link"><h1>Older posts</h1></btn>
            </div>
            {{/if}}
        </div>
    </div>
</div>
